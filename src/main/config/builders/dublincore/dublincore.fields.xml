<?xml version="1.0" ?>
<fieldlist
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder
                        http://www.mmbase.org/xmlns/builder.xsd">

  <!-- Relavant subset of dublin core fields -->
  <field name="source">
    <descriptions>
      <description xml:lang="en">Reference to a resource from which the present item is derived</description>
      <description xml:lang="nl">Referentie naar de (oorspronkelijke) bron van dit item</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Source</guiname>
      <guiname xml:lang="nl">Bron</guiname>
    </gui>
    <editor>
      <positions>
        <input>19</input>
        <search>19</search>
      </positions>
    </editor>
    <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <maxLength value="255" />
    </datatype>
  </field>

  <field name="publisher">
    <descriptions>
      <description xml:lang="en">Entity (normally an organisation) responsible for making the resource available</description>
      <description xml:lang="nl">De voor dit item verantwoordelijk entiteit (meestal een organisatie)</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Publisher</guiname>
      <guiname xml:lang="nl">Uitgever</guiname>
    </gui>
    <editor>
      <positions>
        <input>19</input>
        <search>19</search>
      </positions>
    </editor>
    <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <maxLength value="255" />
    </datatype>
  </field>

  <field name="keywords">
    <descriptions>
      <description xml:lang="en">Comma separated list of subjects or keywords</description>
      <description xml:lang="nl">Kommagescheiden lijst van onderwerpen of trefwoorden</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Keywords</guiname>
      <guiname xml:lang="nl">Trefwoorden</guiname>
    </gui>
    <editor>
      <positions>
        <input>10</input>
        <search>10</search>
      </positions>
    </editor>
    <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <maxLength value="511" />
    </datatype>
  </field>

  <field name="coverage">
    <descriptions>
      <description xml:lang="en">Comma seperated list with coverage: typically a spatial location, temporal period or jurisdiction</description>
      <description xml:lang="nl">Kommageschieden lijst met 'coverage': over het algemeen een geografische locatie, periode of jurisdictie</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Coverage</guiname>
      <guiname xml:lang="nl">Coverage</guiname>
    </gui>
    <editor>
      <positions>
        <input>19</input>
        <search>19</search>
      </positions>
    </editor>
    <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <maxLength value="511" />
    </datatype>
  </field>

  <field name="date">
    <descriptions>
      <description xml:lang="nl">Publicatiedatum, in veel gevallen de creatiedatum</description>
      <description xml:lang="en">Date of publication, in most cases the creation date</description>
    </descriptions>
    <gui>
      <guiname xml:lang="nl">Datum</guiname>
      <guiname xml:lang="en">Date</guiname>
    </gui>
    <editor>
      <positions>
        <input>91</input>
        <list>91</list>
        <search>91</search>
      </positions>
    </editor>
    <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <default value="now" />
      <minInclusive enforce="never" value="today - 99 year" />
      <maxInclusive enforce="never" value="today + 10 year" />
    </datatype>
  </field>


  <!--
      <field name="origin_trace" state="system">
      <datatype base="origin-trace" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      </field>
  -->

</fieldlist>

