<?xml version="1.0" ?>
<fieldlist
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder
                        http://www.mmbase.org/xmlns/builder.xsd">

  <!-- Relavant subset of dublin core fields -->
  <field name="dc_creator">
    <descriptions>
      <description xml:lang="en">Creator of the resource (dc:creator).</description>
      <description xml:lang="nl">Maker van dit werk (dc:creator).</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Creator</guiname>
      <guiname xml:lang="nl">Maker</guiname>
    </gui>
    <editor>
      <positions>
        <input>20</input>
        <search>20</search>
      </positions>
    </editor>
    <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <required value="true">
        <description xml:lang="en">... is required.</description>
        <description xml:lang="nl">... is verplicht.</description>
      </required>
      <minLength value="3" enforce="onvalidate">
        <description xml:lang="en">... is required and should be at least 3 characters.</description>        
        <description xml:lang="nl">... is verplicht en moet tenminste 3 karakters lang zijn.</description>
      </minLength>
      <maxLength value="255" />
      <getprocessor>
        <class name="eu.openimages.processors.CreatorName" />
      </getprocessor>
    </datatype> 
  </field>
  
  <field name="keywords">
    <descriptions>
      <description xml:lang="en">Point comma separated list of subjects or keywords (dc:subject).</description>
      <description xml:lang="nl">Puntkomma gescheiden lijst van onderwerpen of trefwoorden (dc:subject).</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Keywords</guiname>
      <guiname xml:lang="nl">Trefwoorden</guiname>
    </gui>
    <editor>
      <positions>
        <input>21</input>
        <search>21</search>
      </positions>
    </editor>
    <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <maxLength value="511" />
    </datatype>
  </field>
  
  <field name="source">
    <descriptions>
      <description xml:lang="en">Reference to a resource from which the present item is derived (dc:source).</description>
      <description xml:lang="nl">Referentie naar de (oorspronkelijke) bron van dit item (dc:source).</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Source</guiname>
      <guiname xml:lang="nl">Bron</guiname>
    </gui>
    <editor>
      <positions>
        <input>22</input>
        <search>22</search>
      </positions>
    </editor>
    <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <maxLength value="255" />
    </datatype>
  </field>

  <field name="identifier">
    <descriptions>
      <description xml:lang="en">Identifier corresponding with an external source, like catalogue id or url (dc:identifier).</description>
      <description xml:lang="nl">Identicatie die overeenkomt met die van een externe bron, zoals een catalogusnummer of url (dc:identifier).</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Identifier</guiname>
      <guiname xml:lang="nl">Identificatie</guiname>
    </gui>
    <editor>
      <positions>
        <input>23</input>
        <search>23</search>
      </positions>
    </editor>
    <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <maxLength value="255" />
    </datatype>
  </field>
  
  <field name="coverage">
    <descriptions>
      <description xml:lang="en">Point comma separated list with coverage: typically a spatial location, temporal period or jurisdiction (dc:coverage).</description>
      <description xml:lang="nl">Puntkomma gescheiden lijst met 'coverage': over het algemeen een geografische locatie, periode of jurisdictie (dc:coverage).</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Coverage</guiname>
      <guiname xml:lang="nl">Coverage</guiname>
    </gui>
    <editor>
      <positions>
        <input>25</input>
        <search>25</search>
      </positions>
    </editor>
    <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <maxLength value="511" />
    </datatype>
  </field>

  <field name="publisher">
    <descriptions>
      <description xml:lang="en">Entity - typically an organisation - responsible for making the resource available (dc:publisher).</description>
      <description xml:lang="nl">De voor dit item verantwoordelijk entiteit, meestal een organisatie (dc:publisher).</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Publisher</guiname>
      <guiname xml:lang="nl">Uitgever</guiname>
    </gui>
    <editor>
      <positions>
        <input>27</input>
        <search>27</search>
      </positions>
    </editor>

    <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <required value="true">
        <description xml:lang="en">... is required.</description>
        <description xml:lang="nl">... is verplicht.</description>
      </required>
      <minLength value="3" enforce="onvalidate">
        <description xml:lang="en">... is required and should be at least 3 characters.</description>        
        <description xml:lang="nl">... is verplicht en moet tenminste 3 karakters lang zijn.</description>
      </minLength>
      <maxLength value="255" />
      <getprocessor>
        <class name="eu.openimages.processors.CreatorName" />
      </getprocessor>
    </datatype> 
  
  </field>
  
  <field name="contributor">
    <descriptions>
      <description xml:lang="en">Point comma separated list with people or organisations that made contributions to the resource (dc:contributor).</description>
      <description xml:lang="nl">Puntkommagescheiden lijst met organisaties of personen die bijdragen aan dit werk leverden (dc:contributor).</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Contributor</guiname>
      <guiname xml:lang="nl">Bijdragen</guiname>
    </gui>
    <editor>
      <positions>
        <input>28</input>
        <search>28</search>
      </positions>
    </editor>
    <datatype base="eline" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <maxLength value="255" />
    </datatype>
  </field>

  <field name="relation">
    <descriptions>
      <description xml:lang="en">Related resources or related works (dc:relation).</description>
      <description xml:lang="nl">Gerelateerd werk, gerelateerde bronnen (dc:relation).</description>
    </descriptions>
    <gui>
      <guiname xml:lang="en">Relation</guiname>
      <guiname xml:lang="nl">Relaties</guiname>
    </gui>
    <editor>
      <positions>
        <input>29</input>
        <search>29</search>
      </positions>
    </editor>
    <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <maxLength value="1024" />
    </datatype>
  </field>
  
  <field name="date">
    <descriptions>
      <description xml:lang="nl">Publicatiedatum, in veel gevallen de creatiedatum (dc:date).</description>
      <description xml:lang="en">Date of publication, in most cases the creation date (dc:date).</description>
    </descriptions>
    <gui>
      <guiname xml:lang="nl">Datum</guiname>
      <guiname xml:lang="en">Date</guiname>
    </gui>
    <editor>
      <positions>
        <input>91</input>
        <list>91</list>
        <search>91</search>
      </positions>
    </editor>
    <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes">
      <default value="now" />
      <minInclusive enforce="never" value="today - 99 year" />
      <maxInclusive enforce="never" value="today + 10 year" />
    </datatype>
  </field>


  <!--
      <field name="origin_trace" state="system">
      <datatype base="origin-trace" xmlns="http://www.mmbase.org/xmlns/datatypes" />
      </field>
  -->

</fieldlist>

