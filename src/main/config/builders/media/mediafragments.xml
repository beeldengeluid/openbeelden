<?xml version="1.0" ?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder
                        http://www.mmbase.org/xmlns/builder.xsd"
    name="mediafragments"  maintainer="mediaproject.mmbase.org" version="0" extends="object">

  <class>org.mmbase.applications.media.builders.MediaFragments</class>

  <names>
    <singular xml:lang="nl">Mediafragment</singular>
    <singular xml:lang="en">Media fragment</singular>
    <plural xml:lang="nl">Mediafragmenten</plural>
    <plural xml:lang="en">Media fragments</plural>
  </names>

  <descriptions>
    <description xml:lang="nl">Een media item bevat de beschrijving van een media item (video, audio of afbeelding).</description>
    <description xml:lang="en">A media fragment contains the description of a media item (video, audio or image).</description>
  </descriptions>

  <properties>
    <property name="org.mmbase.media.containedtype">mediasources</property>
  </properties>

  <xi:include href="http://www.mmbase.org/builders/media/mediafragments.fields.xml" />

  <fieldlist>
    <xi:include href="http://www.mmbase.org/builders/oip/language.field.xml" />
  </fieldlist>

  <xi:include href="http://www.mmbase.org/builders/mmsite/content.meta.fields.xml" />

  <fieldlist>
    
    <field name="source">
      <descriptions>
        <description xml:lang="en">Author or source of this item</description>
        <description xml:lang="nl">Auteur of bron van dit item</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Source</guiname>
        <guiname xml:lang="nl">Bron</guiname>
      </gui>
      <editor>
        <positions>
          <input>9</input>
          <search>9</search>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="255" />
      </datatype>
    </field>

    <field name="keywords">
      <descriptions>
        <description xml:lang="en">Comma separated list with keywords</description>
        <description xml:lang="nl">Komma gescheiden lijst met trefwoorden</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Keywords</guiname>
        <guiname xml:lang="nl">Trefwoorden</guiname>
      </gui>
      <editor>
        <positions>
          <input>10</input>
          <search>10</search>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="511" />
      </datatype>
    </field>

    <field name="coverage">
      <descriptions>
        <description xml:lang="en">Comma separated list</description>
        <description xml:lang="nl">Komma gescheiden lijst</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Coverage</guiname>
        <guiname xml:lang="nl">Coverage</guiname>
      </gui>
      <editor>
        <positions>
          <input>11</input>
          <search>11</search>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="511" />
      </datatype>
    </field>
    
	<field name="date">
	  <descriptions>
		<description xml:lang="nl">Generiek datum veld, normaal gesproken de creatiedatum maar dit veld kan worden aangepast.</description>
		<description xml:lang="en">Generic date field, in principle the creation date but it can be adapted.</description>
	  </descriptions>
	  <gui>
		<guiname xml:lang="nl">Datum</guiname>
		<guiname xml:lang="en">Date</guiname>
	  </gui>
	  <editor>
		<positions>
		  <input>91</input>
		  <list>91</list>
		  <search>91</search>
		</positions>
	  </editor>
      <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <default value="now" />
        <minInclusive enforce="never" value="today - 99 year" />
        <maxInclusive enforce="never" value="today + 10 year" />
      </datatype>
	</field>


    <!--
    <field name="origin_trace" state="system">
      <datatype base="origin-trace" xmlns="http://www.mmbase.org/xmlns/datatypes" />
    </field>
    -->

  </fieldlist>


  <xi:include href="http://www.mmbase.org/builders/media/mediafragments.auxiliary.fields.xml" />


  <functionlist>
    <xi:include href="http://www.mmbase.org/builders/oip/translation.function.xml" />
  </functionlist>

</builder>
