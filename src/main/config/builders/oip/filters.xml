<?xml version="1.0" encoding="UTF-8"?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder
                        http://www.mmbase.org/xmlns/builder.xsd"
    name="filters" maintainer="mmbase.org" version="0" extends="object">
  <searchage>999</searchage>
  <names>
    <singular xml:lang="en">Filter</singular>
    <singular xml:lang="nl">Filter</singular>
    <plural xml:lang="en">Filters</plural>
    <plural xml:lang="nl">Filters</plural>
  </names>
  <descriptions>
    <description xml:lang="en">A portal filter based on tags, keywords and users.</description>
    <description xml:lang="nl">Een portal filter gebaseerd op tags, keywords en users.</description>
  </descriptions>
  <properties />
  <fieldlist>
  
    <field name="name">
      <descriptions>
        <description xml:lang="en">Name of filter</description>
        <description xml:lang="nl">Naam van het filter</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Name</guiname>
        <guiname xml:lang="nl">Naam</guiname>
      </gui>
      <editor>
        <positions>
          <input>1</input>
          <list>1</list>
          <search>1</search>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <required value="false">
          <description xml:lang="nl">Dit is een verplicht veld</description>
          <description xml:lang="en">This is a required field</description>
        </required>
        <maxLength value="255" />
      </datatype>
    </field>

    <field name="users">
      <descriptions>
        <description xml:lang="en">Semicolon separated list with users</description>
        <description xml:lang="nl">Puntkomma gescheiden lijst met gebruikers (users)</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Users</guiname>
        <guiname xml:lang="en">Users</guiname>
      </gui>
      <editor>
        <positions>
          <input>2</input>
          <list>2</list>
          <search>2</search>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="1024" />
      </datatype>
    </field>

    <field name="keywords">
      <descriptions>
        <description xml:lang="en">Semicolon separated list with keywords</description>
        <description xml:lang="nl">Puntkomma gescheiden lijst met trefwoorden (keywords)</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Trefwoorden</guiname>
        <guiname xml:lang="en">Keywords</guiname>
      </gui>
      <editor>
        <positions>
          <input>3</input>
          <list>3</list>
          <search>3</search>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="1024" />
      </datatype>
    </field>

    <field name="tags">
      <descriptions>
        <description xml:lang="en">Semicolon seperated list with tags</description>
        <description xml:lang="nl">Puntkomma gescheiden lijst met tags</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Tags</guiname>
        <guiname xml:lang="en">Tags</guiname>
      </gui>
      <editor>
        <positions>
          <input>4</input>
          <list>4</list>
          <search>4</search>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="1024" />
      </datatype>
    </field>

  </fieldlist>


</builder>
